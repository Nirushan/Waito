@model IEnumerable<Waito.Models.Page>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PageName)
        </th>
        <th>
           Url
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PageName)
        </td>
        <td>
            /StandardPages/Page?id=@item.PageId
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PageId }) |            
            @Html.ActionLink("Delete", "Delete", new { id=item.PageId })
        </td>
    </tr>
}

</table>
